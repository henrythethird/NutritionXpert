{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Recipes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-right">Rating</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'name': recipe.name }) }}">{{ recipe.name }}</a></td>
                <td class="text-right">{{ recipe.rating }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}