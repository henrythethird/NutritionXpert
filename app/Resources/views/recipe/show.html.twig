{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">{{ recipe.name }}</h1>

    <dl>
        <dt>Rating:</dt>
        <dd>{{ recipe.rating }}</dd>
    </dl>

    <h2>Ingredients</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            {% for recipeIngredient in recipe.recipeIngredients %}
            <tr>
                <td><a href="{{ path('ingredient_show', {'name': recipeIngredient.ingredient.name}) }}">{{ recipeIngredient.ingredient.name }}</a></td>
                <td>{{ recipeIngredient.amount }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}